#include<stdio.h>
int main()

{
    int day;
         printf("\n 1.sunday");
         printf("\n 2.monday");
         printf("\n 3.tuesday");
         printf("\n 4.wednesday");
         printf("\n 5.thursday");
         printf("\n 6.friday");
         printf("\n 7.saturday");
    printf("\n choose your day: ");
    scanf("%d",&day);

 switch(day)
 {
 case(1):
    printf("wishing you a blessed and beautiful sunday ");
    break;

   case(2):
     printf("monday is a start of something wonderful");
      break;

   case(3):
     printf("may your heart be full of joy and you day full of smiles happy tuesday");
     break;

   case(4):
     printf("may your wednesday be filled with blessings");
     break;


   case(5):
     printf("On thrusday start your day with smile and laughter");
     break;

   case(6):
     printf("Happy friday have a wonderful weekend ");
     break;

   case (7):
     printf("I wish you a blessed happy saturday");
     break;

   case(8):
     break;

   default:
    printf("anonymous");

   }

  printf("\n");
  return 0;
}
