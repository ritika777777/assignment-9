#include<stdio.h>
int main()

{
    float amt=0,t_amt,unit;

printf("enter unit");
scanf("%f",&unit);


 switch(unit<=50)
 {
    case 1:
        amt=unit*0.50;
    break;

    case 0:
         switch(unit<=150){
    case 1:
        amt=25+((unit-50)*0.75);
    break;

    case 0:
        switch(unit<=250){
        case 1:
     amt=100+((unit-150)*1.20);
    break;
    case 0:
      amt=220+((unit-250)*1.50);
         break;
 }
 break;
 }
 break;
   }
   t_amt=amt*0.2;

   printf("electricity bill=%f",t_amt);
  return 0;
}
